<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal" role="form">
    <div class="form-group">
      <div class="col-xs-1 control-label">名前:</div>
      <div class="col-xs-11">
        <%= f.text_field :name,  class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-1 control-label">年齢:</div>
      <div class="col-xs-11">
        <%= f.number_field :age,  class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-1 control-label">内容:</div>
      <div class="col-xs-11">
        <%= f.text_area :body, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-1 col-xs-11">
        <%= f.submit class: "btn btn-primary btn-block form-control" %>  
      </div>
    </div>
  </div>
<% end %>